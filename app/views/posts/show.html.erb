</h4>


<h3>
<%= link_to :"delete", "/posts/#{params[:id]}", method: "delete", class: "btn btn-danger"%>
</h3>

<br>
<br>
<%end%>


<%= simple_form_for @comment, remote: true, :url => "/comments", :method => :post do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<h4> Add a New Comment </h4>
  <div class="form-inputs">
    <%= f.input :text, required: true %>
    <%# <%= f.hidden_field :post_id,  "#{@post.id}"%>
    <%=f.hidden_field :post_id, :value => "#{@post.id}"%>

    <%# <p class='fg-color'>Add images:</p>
    <%= f.file_field :images %> 
  </div>
  <br>
  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>

<%@post.comments.count%>
<%@comments.each do |comment|%>
    <%= comment.text %>
<%= link_to :"Edit", "/comments/#{comment.id}/edit" %>
<%= link_to :"Delete", "/comments/#{comment.id}", method: :delete %>

<% end %>

