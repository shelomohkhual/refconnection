<h3> 
Rating: 
    <% @post.show_rating.to_i.times do  %>
        <span class="text-warning">&#9733;</span>
    <% end %>
    <% (5 - @post.show_rating.to_i).times do  %>
        <span class="text-warning">&#9734;</span>
    <% end %>
</h1> 

<div class="show-info">




<h3>
   <%=@post.title%>

</h3>


<% unless @post.images.empty? %>

    <div class="home-slide">
        <div id="carouselExampleCaptions" class="carousel slide smaller-carousel" data-ride="carousel">
            <ol class="carousel-indicators">
                <% (@post.images.length).times do |i| %>
                <li data-target="#carouselExampleCaptions" data-slide-to="i" class= "<%="active" if i == 0%>"></li>
                <% end %>
            </ol>
            <div class="carousel-inner">
                <% (@post.images.length).times do |i| %>
                    <div class="carousel-item
                        <%="active" if i == 0%>
                    ">
       
                        <%= image_tag(url_for(@post.images[i]),class:'carousel-img')%>
                
                    </div>
                <% end%>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
<% end %>


<h3>
    <%=@post.category.name%>
 
 </h3>

<p>
    <%=@post.description%>

</p>
<h3>
    By: <%=@post.user.username%>

</h3>
<h3>
    <small class="text-dark">Last updated:  <%= time_ago_in_words(@post.updated_at) %></small>

</h3>

<br>


</div>



<% if current_user && current_user.id == @post.user_id%>



<h4>
    <%= link_to :"Edit Informations", "/posts/#{params[:id]}/edit", class: "btn btn-warning my-4" %>
</h4>


<h3>
<%= link_to :"delete", "/posts/#{params[:id]}", method: "delete", class: "btn btn-danger"%>
</h3>

<br>
<br>
<%end%>
<%= link_to :"Back to home", "/" %>


<h2 class="header-ternary"> Reviews </h1> 
<div id="reviews">

<%if current_user%>
  <div class="card">
    <div class="card-header">
        <h3>Add Review </h3>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
       
       
<%= simple_form_for @review, remote: true do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :title, required: true %>
    <%= f.input :rating, required: true, collection: 1..5 %>

    <%= f.input :text, required: true %>
    <%=f.hidden_field :post_id, :value => @post.id%>

    
  </div>
  <br>
  <div class="form-actions text-center">
    <%= f.button :submit, id: "submit" %>
  </div>
<% end %>
       </blockquote>
    </div>
  </div>

<%end%>

<div class="reviews">

<% if @reviews.empty?%>

<p> There are no reviews to show </p>

<%else%>
<%(@reviews.length).times do |i|%>

<div class="card">
  <div class="card-header">
    <strong><%= @reviews[i].title%> </strong>
     <% @reviews[i].rating.to_i.times do  %>
        <span class="text-warning">&#9733;</span>
    <% end %>
    <% (5 -  @reviews[i].rating.to_i).times do  %>
        <span class="text-warning">&#9734;</span>
    <% end %>
</h1> 
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @reviews[i].text%></p>
      <footer class="blockquote-footer">By:  <cite title="Source Title"><%=@reviews[i].user.username%></cite>
      <%if current_user && current_user.id == @reviews[i].user_id%>
        <%=link_to "edit", "/reviews/#{@reviews[i].id}/edit"%>
        <%= link_to 'Delete',"/reviews/#{@reviews[i].id}" ,
        method: :delete, 
        data: { confirm: 'Are you sure?' } %>
      <%end%>
      </footer>
    </blockquote>
  </div>
  <div class="card-footer">
        <small class="text-dark">Reviewed:  <%= time_ago_in_words(@reviews[i].created_at) %></small>
    </div>
</div>


<%end%>
<%end%>
</div>

</div>


