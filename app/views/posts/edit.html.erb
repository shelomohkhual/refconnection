<% unless @post.images.empty? %>

    <div class="home-slide">
        <div id="carouselExampleCaptions" class="carousel slide smaller-carousel" data-ride="carousel">
            <ol class="carousel-indicators">
                <% (@post.images.length).times do |i| %>
                <li data-target="#carouselExampleCaptions" data-slide-to="i" class= "<%="active" if i == 0%>"></li>
                <% end %>
            </ol>
            <div class="carousel-inner">
                <% (@post.images.length).times do |i| %>
                    <div class="carousel-item
                        <%="active" if i == 0%>
                    ">
       
                        <%= image_tag(url_for(@post.images[i]),class:'carousel-img')%>
                
                    </div>
                <% end%>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
<% end %>
<%# NEW EVENT-FORM %>
<div class="container text-center mt-5">
  <h4 class="main-color">Edit Post</h4>
    <div class="container text-left sign-form">

<%= simple_form_for @post, url: post_path, method: :put do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.association :category, prompt: "Select Category", input_html: { class: "form-control center" } %>

    <% @post.images.each do |image|%>
    <%= image_tag(url_for(image.variant(resize_to_limit: [300,200])))%>
    <div class="del">
    <%= link_to 'x', delete_image_attachment_collection_url(image),
        method: :delete, 
        data: { confirm: 'Are you sure?' } %>
    </div>
<% end%>
    <p class='fg-color'>Add images:</p>
    <%= f.file_field :images, accept: 'image/png,image/jpeg', multiple: true %>
  </div>
  <br>
  <div class="form-actions text-center">
  
    <%= f.button :submit %>
  </div>
<% end %>

    </div>
  <%= link_to 'Back', :back %>
</div>

