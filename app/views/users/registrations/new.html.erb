

<%# SIGN-FORM %>
<div class="container text-center mt-5">
  <h4 class="main-color">Sign Up</h4>
  <div class="container text-left sign-form form-inputs">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username" }%>

    <%= f.input :dob, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12,
                              order: [:day, :month, :year] %>
  
    <%= f.input :phone,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "phone" }%>
    <%= f.input :address,
                required: true,
                input_html: { autocomplete: "address" }%>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <h5>Will you be volunteering for good? </h5>
    <%= f.input :volunteer,
                input_html: { autocomplete: "volunteer" }%>
    <h5>Are you a member of the displaced community? </h5>
    <%= f.input :refugee,
                input_html: { autocomplete: "refugee" }, label: "Yes"%>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
  </div>
</div>
