<%= simple_form_for @experience, remote: true do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :company %>
    <%= f.input :location %>
    <h4> Are you still working in this position? </h4>
    <%= f.input :current_working_role %>
    <%= f.input :start_date %>

    <%= f.input :end_date %>
     <%= f.association :industry, prompt: "Select Category", input_html: { class: "form-control center" } %>
    <%= f.input :description %>

  </div>
  <br>
  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>

