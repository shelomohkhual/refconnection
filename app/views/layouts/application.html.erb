<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'fav.png' %>
    <title>RefConnection</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>
  <body>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<!-- Navigation -->
<% if user_signed_in? || organization_signed_in? %>
  <div class="navbar">
    <%# HEARDER OR LOGO %>
    <%= render 'layouts/navbar-header'%>
    <%# LEFT SIDE %>
    <div> 
    <strong>
      <ul class="text-right">
        <%= render 'layouts/add-navbar'%>
      <% if user_signed_in? %>
      <% @user = current_user %>
        <%= render 'layouts/user-navbar' %>
      <% elsif organization_signed_in? %>
        <%= render 'layouts/org-navbar' %>
      <% end %>
      </strong>
      </ul>
    </div>
  </div>
<% end %>




    <%= yield %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
