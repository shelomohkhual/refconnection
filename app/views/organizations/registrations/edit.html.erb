

<%# SIGN-FORM %>
<div class="container text-center mt-5">
  <h4 class="main-color">Register Company/Organization</h4>
  <div class="container text-left sign-form form-inputs">

<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :contact_person_name,
                hint: "Who is your new contact person?",
                required: false,
                input_html: { autocomplete: "contact_person_name" } %>
    <%= f.input :company_name,
                hint: "What is your new company name?",
                required: false,
                input_html: { autocomplete: "company_name" } %>
    <%= f.input :organizer,
                hint: "Have you quitted organizing",
                required: false,
                input_html: { autocomplete: "organizer" } %>
    <%= f.input :address,
                hint: "What is your new address?",
                required: false,
                input_html: { autocomplete: "address" } %>
    <%= f.input :phone,
                hint: "What is your new contact number",
                required: false,
                input_html: { autocomplete: "phone" } %>
    <%= f.input :email,
                hint: "What is your new email address",
                required: false,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
  
  </div>
</div>
