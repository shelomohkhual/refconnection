<%# SIGN-FORM %>
<div class="container text-center">
  <h4 class="main-color">Register Company/Organization</h4>
  <div class="container text-left sign-form form-inputs">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :contact_person_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "contact_person_name" }%>
    <%= f.input :company_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "company_name" }%>
    <h4>Will you be organizing events for the community?</h4>
    <%= f.input :organizer,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "organizer" }%>
    <%= f.input :address,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "address" }%>
    <%= f.input :phone,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "phone" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Register" %>
  </div>
<% end %>

  </div>
</div>
