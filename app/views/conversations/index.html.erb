<div class='row main-col'>
                        <div class="container col-md-9 mt-2">
                            <ul id="conversations-list">
                            <% @conversations.each do |conversation| %>
                                <div class='card'>
                                    <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
                                </div>
                            <% end %>
                            </ul>
                        </div>

                        <div class="container col-sm-3 mt-2">
                            
                                <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Users</h3>
                                </div>
                                <div class="panel-body">
                                    <ul>
                                    <% @users.each do |user| %>
                                    <li><%= link_to user.username, conversations_path(user_id: user), remote: true, method: :post %></li>
                                    <% end %>
                                    </ul>
                                </div>
                                </div>
                            
                        </div> 
</div>

<script>
x = document.querySelector("[data-behavior = 'notifications']");
x.addEventListener("click",function(e){
  var y = e.target.dataset.id
  if (y){
    $.ajax({
           method: "POST",
           url: `/notifications/read/${y}`,
           datatype: "JSON",
          success: function () {
           }
         });
  }

});
</script>