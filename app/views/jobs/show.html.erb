

<h3>
   <%=@job.title%>

</h2>


<% unless @job.images.empty? %>

    <div class="home-slide">
        <div id="carouselExampleCaptions" class="carousel slide smaller-carousel" data-ride="carousel">
            <ol class="carousel-indicators">
                <% (@job.images.length).times do |i| %>
                <li data-target="#carouselExampleCaptions" data-slide-to="i" class= "<%="active" if i == 0%>"></li>
                <% end %>
            </ol>
            <div class="carousel-inner">
    
                <% (@job.images.length).times do |i| %>
                    <div class="carousel-item
                        <%="active" if i == 0%>
                    ">
       
                        <%= image_tag(url_for(@job.images[i]), class:"carousel-img") %>
                
                    </div>
                <% end%>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
<% end %>


<p>
    <%=@job.description%>

</p>
<h3>
  <%=@job.salary%>
</h3>
<h3>
    <small class="text-dark">Last updated:  <%= time_ago_in_words(@job.updated_at) %></small>

</h3>

<br>


</div>



<% if current_organization && current_organization.id == @job.organization_id%>



<h4>
    <%= link_to :"Edit Informations", "/jobs/#{params[:id]}/edit", class: "btn btn-warning my-4" %>
</h4>


<h3>
<%= link_to :"delete", "/jobs/#{params[:id]}", method: "delete", class: "btn btn-danger"%>
</h3>

<br>
<br>
<%end%>
<%= link_to :"Back to home", "/" %>