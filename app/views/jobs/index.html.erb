<h1 class="text-center header-primary mt-5">Jobs</h1>
<% if @jobs.empty? %>
    <p> There are not jobs yet,</p>
<%else%>
<div class='container col-md-9'>
            <div id="cards">
                    <% (@jobs.length).times do |i| %>
                        <!-- Card Wider -->
                            <div class="card card-cascade wider">
                            <!-- Card image -->
                            <div class="view view-cascade overlay">
                                <%= link_to(image_tag(url_for(@jobs[i].images.first),class:"card-img-top"), post_path(@jobs[i])) %>
                                <a href="#!">
                                <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>
                            <!-- Card content -->
                            <div class="card-body card-body-cascade text-left">
                                <!-- Title -->
                                <h4 class="card-title"><strong><%=@jobs[i].title%></strong></h4>
                                <!-- Text -->
                                <p class="card-text g-color"><%=@jobs[i].description%></p>
                                <br>
                                <small class="blue-text pb-2"><strong>by : <%= link_to @jobs[i].user.username, user_path(@jobs[i].user)%> </strong></small>
                            </div>
                            <!-- Card footer -->
                            <div class="card-footer text-muted text-center">
                                <small class="g-color">Last updated:  <%= time_ago_in_words(@jobs[i].updated_at) %></small>
                            </div>
                            </div>
                            <!-- Card Wider -->
                    <% end %>
                            
                        </div>
                </div>
<% end %>

   

<%= link_to "Add new post","/jobs/new",class:"btn btn-warning mx-4 my-4 btn-lg"  %>