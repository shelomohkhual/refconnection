<%# NEW EVENT-FORM %>
<div class="container text-center mt-5">
  <h4 class="main-color">Edit Event Info</h4>
    <div class="container text-left sign-form">



<%= simple_form_for @event, url: event_path, method: :put do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
     <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <% @event.images.each do |image| %>
    <%= image_tag image, style:'width:100%;'%>
    <div class="del">
    <%= link_to 'x', delete_image_attachment_collection_url(image),
        method: :delete, 
        data: { confirm: 'Are you sure?' } %>
    </div>
<% end%>
    <p class='fg-color'>Add images:</p>
    <%= f.file_field :images, accept: 'image/png,image/jpeg', multiple: true %>
  </div>
  <br>
  <div class="form-actions text-center">
  
    <%= f.button :submit %>
  </div>
<% end %>

    </div>
</div>
